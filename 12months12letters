<body>

    <header>
        <h1>Chronicles 2026</h1>
        <p style="color: var(--text-muted);">Write your history. Seal it. Revisit in the future.</p>
        <div class="countdown-container">
            <i class="fa-solid fa-hourglass-half" style="margin-right: 8px; color: var(--accent);"></i>
            Unlocks in: <span id="countdown">Loading...</span>
        </div>
    </header>

    <div class="grid" id="grid-container">
        </div>

    <div class="modal-overlay" id="modalOverlay">
        <div class="modal">
            <div class="modal-header">
                <h2 id="modalTitle">January</h2>
                <button class="close-btn" onclick="closeModal()"><i class="fa-solid fa-xmark"></i></button>
            </div>
            
            <div id="editor-area">
                <textarea id="letterContent" placeholder="Dear future me..."></textarea>
                <div class="modal-actions">
                    <button class="btn-close" onclick="closeModal()">Cancel</button>
                    <button class="btn-save" onclick="saveLetter()">Save Draft</button>
                    <button class="btn-lock" onclick="lockLetter()"><i class="fa-solid fa-lock"></i> Seal Forever</button>
                </div>
                <p style="font-size: 0.8rem; color: var(--text-muted); margin-top: 10px; text-align: right;">
                    *Sealing locks this letter until Dec 31, 2026.
                </p>
            </div>

            <div id="locked-area" style="display: none;">
                <div class="locked-message">
                    <i class="fa-solid fa-lock"></i>
                    <h3>This memory is sealed.</h3>
                    <p>You can open this letter on December 31st, 2026.</p>
                </div>
                <div class="modal-actions" style="justify-content: center;">
                    <button class="btn-close" onclick="closeModal()">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // --- CONFIGURATION ---
        const UNLOCK_DATE = new Date('2026-12-31T00:00:00').getTime();
        const MONTHS = [
            "January", "February", "March", "April", "May", "June", 
            "July", "August", "September", "October", "November", "December"
        ];
        
        let currentMonthIndex = null;
        let data = JSON.parse(localStorage.getItem('capsule_2026_data')) || Array(12).fill({ text: "", locked: false });

        // --- DOM ELEMENTS ---
        const grid = document.getElementById('grid-container');
        const modal = document.getElementById('modalOverlay');
        const modalTitle = document.getElementById('modalTitle');
        const textarea = document.getElementById('letterContent');
        const editorArea = document.getElementById('editor-area');
        const lockedArea = document.getElementById('locked-area');

        // --- COUNTDOWN LOGIC ---
        function updateCountdown() {
            const now = new Date().getTime();
            const distance = UNLOCK_DATE - now;

            if (distance < 0) {
                document.getElementById("countdown").innerHTML = "UNLOCKED";
                document.getElementById("countdown").style.color = "var(--success)";
                return;
            }

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));

            document.getElementById("countdown").innerHTML = `${days}d ${hours}h ${minutes}m`;
        }
        setInterval(updateCountdown, 1000);
        updateCountdown();

        // --- RENDER GRID ---
        function renderGrid() {
            grid.innerHTML = '';
            const now = new Date().getTime();
            const isGlobalUnlocked = now >= UNLOCK_DATE;

            data.forEach((item, index) => {
                const card = document.createElement('div');
                card.className = `card ${item.locked ? 'locked' : (item.text ? 'unlocked' : 'empty')}`;
                
                let icon = 'fa-pen-to-square'; // Default edit
                let status = 'Empty';
                
                if (item.locked) {
                    if (isGlobalUnlocked) {
                        icon = 'fa-envelope-open-text'; // Ready to read
                        status = 'Ready to Read';
                        card.classList.remove('locked');
                        card.classList.add('unlocked');
                    } else {
                        icon = 'fa-lock';
                        status = 'Sealed';
                    }
                } else if (item.text) {
                    status = 'Draft Saved';
                }

                card.innerHTML = `
                    <div class="card-header">
                        <div class="month-name">${MONTHS[index]}</div>
                        <i class="fa-solid ${icon} status-icon"></i>
                    </div>
                    <div class="status-text">${status}</div>
                `;

                card.onclick = () => openModal(index);
                grid.appendChild(card);
            });
        }

        // --- MODAL LOGIC ---
        function openModal(index) {
            currentMonthIndex = index;
            modalTitle.innerText = MONTHS[index] + " 2026";
            const item = data[index];
            const now = new Date().getTime();
            const isGlobalUnlocked = now >= UNLOCK_DATE;

            // Determine if we show editor or lock screen
            if (item.locked && !isGlobalUnlocked) {
                // Locked State
                editorArea.style.display = 'none';
                lockedArea.style.display = 'block';
            } else {
                // Editable or Readable State
                editorArea.style.display = 'block';
                lockedArea.style.display = 'none';
                textarea.value = item.text;
                
                // If unlocked date passed, make it readonly but readable
                if (item.locked && isGlobalUnlocked) {
                    textarea.readOnly = true;
                    document.querySelector('.modal-actions').style.display = 'none'; // Hide save buttons
                } else {
                    textarea.readOnly = false;
                    document.querySelector('.modal-actions').style.display = 'flex';
                }
            }

            modal.classList.add('active');
        }

        function closeModal() {
            modal.classList.remove('active');
        }

        // --- ACTIONS ---
        function saveData() {
            localStorage.setItem('capsule_2026_data', JSON.stringify(data));
            renderGrid();
        }

        function saveLetter() {
            data[currentMonthIndex].text = textarea.value;
            data[currentMonthIndex].locked = false;
            saveData();
            closeModal();
        }

        function lockLetter() {
            if(!textarea.value.trim()) {
                alert("Please write something before sealing the letter.");
                return;
            }
            if(confirm("Are you sure? Once sealed, you cannot edit or read this until Dec 31, 2026.")) {
                data[currentMonthIndex].text = textarea.value;
                data[currentMonthIndex].locked = true;
                saveData();
                closeModal();
            }
        }

        // Close modal if clicking outside
        modal.addEventListener('click', (e) => {
            if (e.target === modal) closeModal();
        });

        // Initialize
        renderGrid();

    </script>
</body>
</html>
